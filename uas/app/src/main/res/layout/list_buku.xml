<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <ImageView
            android:id="@+id/mPhoto"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/buku"/>
        <TextView
            android:id="@+id/mNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mPhoto"
            android:hint="Judul novel"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/mKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mNama"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/mPhoto"
            android:hint="Kategori"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/mHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mKategori"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/mPhoto"
            android:hint="Harga"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/mTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mHarga"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/mPhoto"
            android:hint="tanggal"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/buy"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@color/ini"
            android:text="BUY"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/mTanggal"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/ini"/>
</LinearLayout>
